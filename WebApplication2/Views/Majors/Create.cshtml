@model WebApplication2.Models.Major

<h2>ثبت رشته</h2>

@using (Html.BeginForm("Add", "Majors", FormMethod.Post, new { @class = "form-horizontal" , id="formCreate"}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text text-danger" })
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(model => model.MajorName, new { @class = "col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MajorName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MajorName)
                </div>
            </div>

            <div class="col-md-offset-2">
                <button class="btn btn-primary btn-lg" type="button" onclick="SaveRecord()">
                    <span class="glyphicon glyphicon-pencil"></span>&nbsp;
                    ذخيره
                </button>
                <button class="btn btn-default" type="button" onclick="HideCreateForm()">
                    <span class="glyphicon glyphicon-pencil"></span>&nbsp;
                    انصراف
                </button>

            </div>
        </div>

    </div>
}
